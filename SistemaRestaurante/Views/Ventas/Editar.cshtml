@model SistemaRestaurante.Models.Pedidos

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Platos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPedido" class="control-label"></label>
                <input asp-for="IdPedido" class="form-control" />
                <span asp-validation-for="IdPedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombrePlato" class="control-label"></label>
                <input asp-for="NombrePlato" class="form-control" />
                <span asp-validation-for="NombrePlato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioPlatos" class="control-label"></label>
                <input asp-for="PrecioPlatos" class="form-control" />
                <span asp-validation-for="PrecioPlatos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroMesa" class="control-label"></label>
                <input asp-for="NumeroMesa" class="form-control" />
                <span asp-validation-for="NumeroMesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listado">Volver a listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

